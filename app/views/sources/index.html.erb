<h1>Listing sources</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Pointer</th>
  </tr>

<% for source in @sources %>
  <tr>
    <td><%=h "Authors" %></td>
    <td><%=h source.title.name if source.title %></td>
    <td><%=h source.pointer %></td>
    <td><%= link_to 'Show', source %></td>
    <td><%= link_to 'Edit', edit_source_path(source) %></td>
    <td><%= link_to 'Destroy', source, data: { :confirm => 'Are you sure?' }, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New source', new_source_path %>
